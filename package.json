{
  "name": "truth-or-dare",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^3.8.1",
    "@material-ui/icons": "^3.0.1",
    "file-saver": "^2.0.0",
    "lodash": "^4.17.13",
    "npm-run-all": "^4.1.3",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-redux": "^7.0.3",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.0.1",
    "react-slick": "^0.24.0",
    "redux": "^4.0.0",
    "slick-carousel": "^1.8.1",
    "uuid": "^3.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts test --env=jsdom",
    "test-ci": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "prettier": "prettier --single-quote --tab-width 4 --print-width 100 --write \"src/**/*.{jsx,js}\"",
    "lint": "eslint src/**/*.{jsx,js}",
    "lint-fix": "eslint --fix src/**/*.{jsx,js}"
  },
  "lint-staged": {
    "src/**/*.{jsx,js}": [
      "prettier --single-quote --tab-width 4 --print-width 100 --write",
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint": "^5.6.1",
    "eslint-config-redtn-react": "^0.1.2",
    "eslint-plugin-react": "^7.14.2",
    "husky": "^3.0.0",
    "lint-staged": "^10.0.9",
    "node-sass-chokidar": "^1.3.0",
    "prettier": "^1.18.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
